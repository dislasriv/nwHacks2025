{
    "name": "AccountabilityBuddy (or something)",
    "description": "A simple extension to save you from yourself.",
    "version": "0.1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "settings/settings.html",
        "default_icon": "settings/timer.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "notifications",
        "alarms",
        "storage",
        "tabs"
    ]
}